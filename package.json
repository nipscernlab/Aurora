{
    "name": "aurora-ide",
    "productName": "Aurora IDE",
    "description": "Aurora IDE",
    "author": "NIPSCERN",
    "version": "2.42.33",
    "win": {
        "icon": "./assets/icons/aurora_borealis-2.ico"
    },
    "main": "main.js",
    "scripts": {
        "start": "electron .",
        "test": "echo \"Error: no test specified\" && exit 1",
        "build": "electron-builder"
    },
    "build": {
        "appId": "com.nipscern.auroraide",
        "productName": "Aurora IDE",
        "publish": [
            {
                "provider": "github",
                "owner": "nipscernlab",
                "repo": "Aurora",
                "releaseType": "release"
            }
        ],
        "fileAssociations": [
            {
                "ext": "spf",
                "name": "Sapho Project File",
                "description": "Sapho Project File",
                "role": "Editor"
            }
        ],
        "win": {
            "target": "nsis",
            "icon": "./assets/icons/aurora_borealis-2.ico",
            "artifactName": "AuroraIDE-Setup-2.42.33.${ext}"
        },
        "nsis": {
            "include": "build/installer.nsh"
        },
        "extraResources": [
            {
                "from": "saphoComponents",
                "to": "saphoComponents_tmp"
            }
        ],
        "directories": {
            "buildResources": "build"
        }
    },
    "keywords": [
        "Aurora"
    ],
    "dependencies": {
        "@electron/remote": "^2.1.2",
        "@formspree/react": "^2.5.1",
        "@fortawesome/fontawesome-free": "^6.6.0",
        "@radix-ui/react-alert-dialog": "^1.0.5",
        "@radix-ui/react-slot": "^1.0.2",
        "@radix-ui/react-tabs": "^1.1.1",
        "@xterm/addon-fit": "^0.9.0",
        "@xterm/xterm": "^5.3.0",
        "chokidar": "^4.0.3",
        "class-variance-authority": "^0.7.0",
        "clsx": "^2.0.0",
        "electron-log": "^5.3.4",
        "electron-store": "^10.0.0",
        "electron-updater": "^6.3.9",
        "fs-extra": "^11.3.0",
        "lucide": "^0.293.0",
        "lucide-react": "^0.453.0",
        "moment": "^2.30.1",
        "monaco-editor": "^0.45.0",
        "netlistsvg": "^1.0.2",
        "perf_hooks": "^0.0.1",
        "react": "^18.3.1",
        "react-dom": "^18.3.1",
        "sortablejs": "^1.15.3",
        "tabulator-tables": "^6.3.0",
        "tailwindcss": "^3.3.0",
        "tailwindcss-animate": "^1.0.7",
        "vcd-parser": "^1.0.1",
        "wavedrom": "^3.5.0"
    },
    "devDependencies": {
        "@babel/core": "^7.26.7",
        "@babel/preset-react": "^7.26.3",
        "babel-loader": "^9.2.1",
        "electron": "^28.3.3",
        "electron-builder": "^25.1.8",
        "electron-rebuild": "^3.2.9",
        "webpack": "^5.97.1",
        "webpack-cli": "^5.1.4"
    }
}
