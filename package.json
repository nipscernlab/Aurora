{
    "name": "aurora-ide",
    "productName": "Aurora IDE",
    "description": "Aurora IDE",
    "author": "NIPSCERN",
    "version": "v4.0.0",
    "win": {
        "icon": "./assets/icons/sapho_aurora_icon.ico"
    },
    "main": "main.js",
    "scripts": {
        "start": "electron .",
        "test": "echo \"Error: no test specified\" && exit 1",
        "build": "electron-builder"
    },
    "build": {
        "appId": "com.nipscern.auroraide",
        "productName": "Aurora-IDE",
        "fileAssociations": [
            {
                "ext": "spf",
                "name": "SAPHO Project File",
                "description": "SAPHO Project File",
                "role": "Editor",
                "icon": "./assets/icons/sapho_aurora_icon.ico"
            }
        ],
        "protocols": [
            {
                "name": "SAPHO Project Protocol",
                "schemes": [
                    "sapho"
                ]
            }
        ],
        "publish": [
            {
                "provider": "github",
                "owner": "nipscernlab",
                "repo": "Aurora",
                "releaseType": "release",
                "publishAutoUpdate": true
            }
        ],
        "win": {
            "target": [
                {
                    "target": "nsis",
                    "arch": [
                        "x64"
                    ]
                }
            ],
            "icon": "./assets/icons/sapho_aurora_icon.ico",
            "artifactName": "AuroraIDE-Setup-v4.0.0.${ext}"
        },
        "nsis": {
            "oneClick": true,
            "allowToChangeInstallationDirectory": false,
            "createDesktopShortcut": true,
            "createStartMenuShortcut": true,
            "include": "build/installer.nsh"
        },
        "extraResources": [
            {
                "from": "saphoComponents",
                "to": "saphoComponents_tmp"
            },
            {
                "from": "saphoComponents/Packages/PRISM/netlistsvg/netlistsvg.exe",
                "to": "bin/netlistsvg.exe"
            },
            {
                "from": "saphoComponents/Packages/PRISM/yosys.exe",
                "to": "bin/yosys.exe",
                "filter": [
                    "**/*"
                ]
            }
        ],
        "directories": {
            "buildResources": "build"
        }
    },
    "keywords": [
        "Aurora"
    ],
    "dependencies": {
        "@fortawesome/fontawesome-free": "^6.6.0",
        "chokidar": "^4.0.3",
        "electron-log": "^5.4.0",
        "electron-updater": "^6.6.2",
        "fs-extra": "^11.3.0",
        "golden-layout": "^2.6.0",
        "moment": "^2.30.1",
        "monaco-editor": "^0.45.0",
        "original-fs": "^1.2.0",
        "react": "^18.3.1"
    },
    "devDependencies": {
        "@eslint/js": "^9.34.0",
        "electron": "^38.0.0",
        "electron-builder": "^25.1.8",
        "eslint": "^9.34.0",
        "globals": "^16.3.0"
    }
}
